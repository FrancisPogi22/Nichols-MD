[
  {
    "name": "theme_info",
    "theme_name": "Themekit template theme",
    "theme_version": "1.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://github.com/Shopify/themekit",
    "theme_support_url": "https://github.com/Shopify/themekit/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "Background",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "Background Gradient"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Text Label",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button",
            "label": "Button",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "Button Label",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "Secondary Button Label",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "Shadow",
            "default": "#121212"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "secondary_button_label"
        }
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      { "type": "header", "content": "Headings" },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Font"
      },
      { "type": "header", "content": "Heading Font Color" },
      {
        "type": "color_scheme",
        "id": "heading_color_scheme",
        "label": "Color Scheme",
        "default": "background-white"
      },
      { "type": "header", "content": "Body" },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Body"
      },
      { "type": "header", "content": "Body Font Color" },
      {
        "type": "color_scheme",
        "id": "body_color_scheme",
        "label": "Color Scheme",
        "default": "background-white"
      }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      { "type": "header", "content": "Border" },
      {
        "type": "range",
        "id": "buttons_border_thickness",
        "min": 0,
        "max": 12,
        "step": 1,
        "unit": "px",
        "label": "Thickness",
        "default": 1
      },
      {
        "type": "range",
        "id": "buttons_border_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Opacity",
        "default": 100
      },
      {
        "type": "range",
        "id": "buttons_radius",
        "min": 0,
        "max": 200,
        "step": 20,
        "unit": "px",
        "label": "Corner Radius",
        "default": 0
      },
      { "type": "header", "content": "Shadow Content" },
      {
        "type": "range",
        "id": "buttons_shadow_opacity",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Opacity",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_horizontal_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Horizontal Offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_vertical_offset",
        "min": -12,
        "max": 12,
        "step": 2,
        "unit": "px",
        "label": "Vertical Offset",
        "default": 0
      },
      {
        "type": "range",
        "id": "buttons_shadow_blur",
        "min": 0,
        "max": 20,
        "step": 5,
        "unit": "px",
        "label": "Blur",
        "default": 0
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      { "type": "header", "content": "Social Media links" },
      { "type": "url", "id": "instagram", "label": "Instagram" },
      { "type": "url", "id": "facebook", "label": "Facebook" },
    ]
  }
]
