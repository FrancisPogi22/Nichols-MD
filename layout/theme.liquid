    <meta name="author" content="NicholsMD">
    <meta property="og:title" content="NicholsMD | Premium Skincare & Wellness Products">
    <meta
      property="og:description"
      content="{{ page_description | escape | default: 'Shop dermatologist-recommended skincare & wellness products at NicholsMD.' }}"
    >
    <meta
      property="og:image"
      content="https://cdn.shopify.com/s/files/1/0727/8949/1929/files/NMD_Logo.png?v=1733414521"
    >
    <meta property="og:url" content="{{ canonical_url }}">
    <meta property="og:type" content="website">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="NicholsMD | Premium Skincare & Wellness Products">
    <meta
      name="twitter:description"
      content="{{ page_description | escape | default: 'Shop dermatologist-recommended skincare & wellness products at NicholsMD.' }}"
    >
    <meta
