{% liquid
  assign has_social_icons = true
  if settings.social_facebook == blank and settings.social_instagram == blank
    assign has_social_icons = false
  endif
%}

<section id="footer">
  <div class="wrapper">
    <div class="footer-container">
      {% if section.settings.footer_logo != blank %}
        <img
          class="footer-logo"
          src="{{ section.settings.footer_logo | img_url: "2048x" }}"
          alt="{{ section.settings.footer_logo.alt }}"
          loading="lazy"
        >
      {% else %}
        <img
          src="https://cdn.shopify.com/s/files/1/0727/8949/1929/files/Default_Image.webp?v=1733414521"
          alt="Default Image"
          loading="lazy"
        >
      {% endif %}
      <ul>
        <h6>Contact Details</h6>
        <li>
          <span>NicholsMD | <a href="tel:1-203-862-4000">(203) 862-4000</a></span>
          <span>
            <a href="https://maps.app.goo.gl/iavvUs9dKa26arUG8" target="__blank"
              >50 Old Field Point Road, Third Floor, Greenwich, CT 06830</a
            >
          </span>
        </li>
        <li>
          <span>
            <a href="https://nicholsmdskinlab.com/" target="__blank">SkinLab</a> |
            <a href="tel:1-203-862-4006">(203) 862-4006</a>
          </span>
          <span>
            <a href="https://maps.app.goo.gl/ZyGXAtEGeGb2tcQ26" target="__blank"
              >24 Harbor Point Road, Stamford, CT 06902</a
            >
          </span>
        </li>
        <li>
          <span>NicholsMD of Fairfield | <a href="tel:1-203-862-4009">(203) 862-4009</a></span>
          <span>
            <a href="https://maps.app.goo.gl/bVMjyzz5qJ4mzBwx6" target="__blank"
              >1215 Post Road Fairfield, CT 06824</a
            ></span
          >
        </li>
      </ul>
      <ul>
        <h6>Quick Links</h6>
        {% for link in linklists.footer.links %}
          <li>
            <a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
      <ul>
        <h6>Connect With Us!</h6>
        {% if section.settings.show_social and has_social_icons %}
          {% render 'social_icons', class: 'footer_list_social' %}
        {% endif %}
      </ul>
    </div>
    <div class="footer-copyright">
      <p>Â©<span class="year">2024</span> NicholsMD</p>
      <p>Designed by Aesthetic Conversion</p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Footer",
  "enabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Footer Logo"
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "header",
      "content": "Social Links"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "Social media icons"
    }
  ]
}
{% endschema %}
