  "name": "Header",
  "settings": [
    {
      "id": "header_logo",
      "type": "image_picker",
      "label": "Header Logo"
    },
    {
      "type": "header",
      "content": "Navbar"
    },
    {
      "id": "menu",
      "type": "link_list",
      "default": "main-menu",
      "label": "Header Menu"
    }
  ]
