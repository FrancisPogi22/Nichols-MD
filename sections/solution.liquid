{{ 'solution.css' | asset_url | stylesheet_tag }}

<section id="solution" class="color-{{ section.settings.background_color }}">
  <div class="wrapper">
    <div class="shop-container">
      <div class="shop-header-container">
        {% if section.settings.lead_in_text != blank %}
          <p class="lead-in light-blue">{{ section.settings.lead_in_text | escape }}</p>
        {% endif %}
        {% if section.settings.heading_text != blank %}
          <h2 class="dark-gray">{{ section.settings.heading_text | escape }}</h2>
        {% endif %}
      </div>
      <div class="product-container">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'widget' %}
              <div class="product-widget">
                <a href="{{ block.settings.widget_link }}">
                  <img
                    src="{{ block.settings.widget_image | img_url: 'medium' }}"
                    alt="{{ block.settings.widget_text }}"
                    loading="lazy"
                  >
                </a>
                <a href="{{ block.settings.widget_link }}">
                  <h4 class="dark-gray">{{ block.settings.widget_text }}</h4>
                </a>
                <p class="semi-gray">
                  <a href="{{ block.settings.widget_link }}" class="learn-more-link">Learn More</a>
                </p>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Solution",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Lead In Text"
    },
    {
      "type": "text",
      "id": "lead_in_text",
      "default": "We offer solutions",
      "label": "Lead In Text"
    },
    {
      "type": "header",
      "content": "Heading Text"
    },
    {
      "type": "text",
      "id": "heading_text",
      "default": "Shop by skintype",
      "label": "Heading Text"
    },
    {
      "type": "color_scheme",
      "id": "background_color",
      "default": "background_white",
      "label": "Background Color"
    }
  ],
  "blocks": [
    {
      "type": "widget",
      "name": "Widget",
      "settings": [
        {
          "type": "header",
          "content": "Widget Image"
        },
        {
          "type": "image_picker",
          "id": "widget_image",
          "label": "Widget Image"
        },
        {
          "type": "text",
          "id": "widget_text",
          "label": "Widget Image Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "widget_link",
          "label": "Widget Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Solution"
    }
  ]
}
{% endschema %}
